<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/ic_launcher"
        android:gravity="center_horizontal"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/selection_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Nome"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#333" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:orientation="vertical" >

        <!-- cabeçalhos Cadastrar Visitante e Últimas Visitas -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/label_cadastrar_visitante"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/home_cadastrar_visitante_cabecalho"
                    android:gravity="center_vertical"
                    android:text="  Cadastrar Visitantes"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/label_ultimas_visitas_cabecalho"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/home_ultimas_visitas_cabecalho"
                    android:gravity="center_vertical"
                    android:text="  Últimas Visitas"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- corpo pegarOnibus e meusAmigos -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_cadastrar_visitante_corpo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/home_cadastrar_visitante_corpo"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_cadastrar_visitante"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/cadastrar_visitante" />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ultimas_visitas_corpo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/home_ultimas_visitas_corpo"
                android:orientation="horizontal" >

               <ImageView
                    android:id="@+id/img_ultimas_visitas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ultimas_visitas" />
               
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:orientation="vertical" >

        <!-- cabeçalhos lojas e duvidas -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/label_configurar_alerta_cabecalho"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/home_configurar_alerta_cabecalho"
                    android:gravity="center_vertical"
                    android:text=" Configurar Alerta"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/label_relatorio_evolucao_cabecalho"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/home_relatorio_cabecalho"
                    android:gravity="center_vertical"
                    android:text="  Relatório de Evolução"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- corpo lojas e duvidas -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_configurar_alerta_corpo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/home_configurar_alerta_corpo"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_configurar_alerta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/alerta" />
                -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_relatorio_corpo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/home_relatorio_corpo"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_relatorio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/relatorio" />
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>